{% extends 'base.html.twig' %}

{% block title %} Symphart Articles{% endblock %}

{% block body %}

    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
                <tr>
                    <th>Article Title</th>
                    <th>Article Body</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}  
                   <tr>
                       <td>{{article.title}}</td>
                       <td>{{article.body}}</td>
                       <td>
                           <a href="/symphart/public/article/{{article.id}}" class="btn btn-dark">Show</a>
                       </td>
                       <td>
                          <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a>
                       </td>
                   </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No article to display</p>
    {% endif %}

{% endblock %}

{% block javascripts %}
  <script src="/js/main.js"></script>
{% endblock %}
 


